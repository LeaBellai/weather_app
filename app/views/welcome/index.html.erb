<%= render 'form' %>

<div class = "row">
    <div class = "col-md-6 col-md-offset-3">
        <div class = "well">
            <h1>Welcome To <%= @location %>!</h1>
            <div class = "row">
                <div class = "col-md-7">
                    <p><em>What's the weather like?</em></p>
                    <p>
                        Temperature is: <%= @temp_f %>° F / <%= @temp_c %>° C 
                    </p>
                    <p>
                        Feels like: <%= @real_feel %>° F
                        <br>
                        <br>
                        Relative Humidity:<%=@relative_humidity.to_f.round(2)%>
                    </p>
                </div>  
                <div class = "col-md-5">
                    <p>
                       <%= @weather_words%> <%= image_tag @weather_icon%> 
                    </p>
                    <br>
                    <p>
                        <%=link_to "Full Forecast", @forecast_link, target: "_blank" %>
                    </p>
                </div>
            </div>
            <div class="row">
                <div class ="col-md-12">
                    <div class ="col-md-3">
                        <p> Country:<%=@country%> </p>
                    </div>
                    <div class= "col-md-3">
                        <p>Zip Code:<%=@zip%> </p>
                    </div>
                    <div class= "col-md-3">
                        <p> Latitude:<%=@lat.to_f.round(2)%> </p>
                    </div>
                    <div class ="col-md-3">
                        <p>Longitude:<%=@long.to_f.round(2)%> </p>
                    </div> 
                </div>               
            </div>
        </div>
    </div>    
</div>
